
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:touchscreenBlocksFocus="false"
    android:background="@android:color/background_light">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_registro"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="217dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/registreatefb"
            android:scaleType="fitXY"
            android:onClick="loguearConFacebook"
            android:layout_marginTop="80dp" />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="9dp"
            android:id="@+id/imageView23"
            android:src="@drawable/oconcorreoelectronico"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextMail"
            android:hint="Mail"
            android:layout_gravity="center"
            android:textSize="10dp"
            android:textIsSelectable="true" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextContrasena"
            android:hint="Elige una contraseña"
            android:layout_gravity="center"
            android:textSize="10dp"
            android:textIsSelectable="true" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextConfirmContrasena"
            android:layout_gravity="center"
            android:textSize="10dp"
            android:textIsSelectable="true"
            android:hint="Confirmar contraseña" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:id="@+id/imageView24"
            android:layout_gravity="center"
            android:src="@drawable/registrate"
            android:onClick="loguearConMail"
            android:scaleType="fitXY"
            android:layout_marginTop="14dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageView25"
            android:src="@drawable/bolita"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="9dp"
            android:id="@+id/imageView26"
            android:src="@drawable/terminostexto"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_marginTop="30dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp">

            <ImageView
                android:layout_width="105dp"
                android:layout_height="12dp"
                android:id="@+id/imageView27"
                android:layout_gravity="center"
                android:src="@drawable/terminosbtn"
                android:scaleType="fitXY"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="1dp" />

            <ImageView
                android:layout_width="88dp"
                android:layout_height="10dp"
                android:id="@+id/imageView28"
                android:src="@drawable/avisoprivacidad"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_marginTop="1dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" >

            <ImageView
                android:layout_width="105dp"
                android:layout_height="12dp"
                android:id="@+id/imageView29"
                android:layout_gravity="center"
                android:src="@drawable/yatienescuenta"
                android:scaleType="fitXY"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="2dp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="12dp"
                android:id="@+id/imageView30"
                android:src="@drawable/inicia"
                android:scaleType="fitXY"
                android:layout_gravity="center" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
