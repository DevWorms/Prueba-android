<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/fab_margin"
    android:background="@drawable/fondoreceta">

    <com.theartofdev.fastimageloader.target.TargetImageView
        android:id="@+id/imagenreceta"
        android:layout_width="match_parent"
        android:scaleType="fitCenter"
        android:layout_height="215dp" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="90dp"
                android:layout_height="300dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/imageView16"
                    android:src="@drawable/bandatitulopaquete"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="60dp" />

                <com.devworms.toukan.mango.componentes.TextoNegrita
                    android:id="@+id/txtrecetaTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:typeface="monospace"
                    android:gravity="center"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:textColor="#ffffff"
                    android:textIsSelectable="true"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="130dp"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/imageView18"
                    android:src="@drawable/tiradescripcion"
                    android:scaleType="center"
                    android:adjustViewBounds="true"
                    android:layout_below="@+id/imageView16"
                    android:layout_height="60dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView17"
                    android:src="@drawable/plecadivision"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="162dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:id="@+id/imageView19"
                    android:src="@drawable/fondomegustacompartir"
                    android:scaleType="center"
                    android:adjustViewBounds="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageView18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/favoritos"
                    android:layout_alignTop="@+id/imageView19"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="35dp"
                    android:src="@drawable/iconomegusta"
                    android:scaleType="fitStart"
                    android:layout_toStartOf="@+id/compartir"
                    android:layout_alignEnd="@+id/txtrecetaTitulo" />

                <com.devworms.toukan.mango.componentes.TextoNormal
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="ME GUSTA"
                    android:id="@+id/textView11"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:layout_marginLeft="95dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/imageView18"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/compartir"

                    android:src="@drawable/iconocompartir"
                    android:scaleType="fitStart"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/imageView18"
                    android:layout_marginLeft="140dp" />

                <com.devworms.toukan.mango.componentes.TextoNormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="TIEMPO"
                    android:id="@+id/textView13"
                    android:textColor="#000000"
                    android:layout_below="@+id/imageView17"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp" />

                <com.devworms.toukan.mango.componentes.TextoNegrita
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="1 hora 30 minutos"
                    android:id="@+id/textView14"
                    android:textColor="#000000"
                    android:layout_alignTop="@+id/textView13"
                    android:layout_marginLeft="45dp"
                    android:textSize="12sp" />

                <com.devworms.toukan.mango.componentes.TextoNormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="/"
                    android:id="@+id/textslash2"
                    android:textColor="#000000"
                    android:layout_below="@+id/imageView17"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="130dp" />

                <com.devworms.toukan.mango.componentes.TextoNormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="/"
                    android:id="@+id/textslash"
                    android:textColor="#000000"
                    android:layout_below="@+id/imageView17"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="197dp"
                    android:textSize="12sp" />

                <com.devworms.toukan.mango.componentes.TextoNormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="PORCIONES"
                    android:id="@+id/textView15"
                    android:textColor="#000000"
                    android:layout_below="@+id/imageView17"
                    android:layout_marginLeft="135dp"
                    android:textSize="12sp" />

                <com.devworms.toukan.mango.componentes.TextoNormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DIFICULTAD"
                    android:id="@+id/textView17"
                    android:textColor="#000000"
                    android:layout_below="@+id/imageView17"
                    android:layout_marginLeft="200dp"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView12"

                    android:src="@drawable/florn1"
                    android:scaleType="fitCenter"
                    android:layout_gravity="left"
                    android:layout_marginLeft="248dp"
                    android:layout_below="@+id/imageView17"
                    android:layout_marginTop="-8dp"
                    android:layout_marginRight="-12dp"
                    android:layout_height="25dp"
                    android:layout_width="60dp" />

                <com.devworms.toukan.mango.componentes.TextoNegrita
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/textView18"
                    android:textColor="#000000"
                    android:layout_alignBaseline="@+id/textView15"
                    android:layout_alignBottom="@+id/textView15"
                    android:textSize="12sp"
                    android:layout_marginLeft="190dp" />

                <com.devworms.toukan.mango.componentes.TextoNormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="COMPARTIR"
                    android:id="@+id/textView16"
                    android:gravity="center|center_vertical|center_horizontal"
                    android:textColor="#000000"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/textslash2"
                    android:layout_below="@+id/imageView18"
                    android:textSize="12dp"
                    android:layout_marginLeft="55dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e0e4e6"
                android:gravity="center_horizontal"
                android:paddingBottom="30dp"
                android:paddingTop="30dp">
                <com.devworms.toukan.mango.componentes.TextoNormal
                    android:id="@+id/txtreceta"
                    android:layout_height="wrap_content"
                    android:background="#e0e4e6"
                    android:textSize="14sp"
                    android:layout_width="240dp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>



</RelativeLayout>
