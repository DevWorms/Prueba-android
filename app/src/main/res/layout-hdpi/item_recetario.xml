<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.theartofdev.fastimageloader.target.TargetImageView
        android:id="@+id/image_view"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_height="180dp"
        android:layout_width="718dp" />

    <ImageView
        android:layout_width="718dp"
        android:id="@+id/imageView15"
        android:layout_alignBottom="@+id/image_view"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bandatituloreceta"
        android:scaleType="centerCrop"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/image_view"
        android:layout_alignLeft="@+id/image_view"
        android:layout_alignStart="@+id/image_view"
        android:layout_alignRight="@+id/image_view"
        android:layout_alignEnd="@+id/image_view"
        android:layout_alignTop="@+id/imageView15">
        <LinearLayout android:layout_height="match_parent"
            android:layout_width="145dp">
            <com.devworms.toukan.mangofrida.componentes.TextoNegrita
                android:layout_height="match_parent"
                android:text="Pastel azteca"
                android:id="@+id/textViewNombrereceta"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:lines="3"
                android:maxLines="3"
                android:paddingEnd="15dp"
                android:paddingStart="0dp"
                android:textIsSelectable="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_vertical|center_horizontal|left"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:layout_width="140dp" />
        </LinearLayout>

        <GridLayout
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_gravity="center_vertical"
            android:layout_columnSpan = "2">
            <com.devworms.toukan.mangofrida.componentes.TextoNegrita
                android:text="TIEMPO"
                android:id="@+id/textView"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"

                android:textSize="10sp"
                android:paddingEnd="1dp"
                android:layout_marginTop="6dp" />
            <com.devworms.toukan.mangofrida.componentes.TextoNegrita
                android:shadowColor="#000000"
                android:textColor="#ffffff"
                android:id="@+id/textViewTiempo"
                android:layout_gravity="fill_horizontal"
                android:textSize="10sp"
                android:textIsSelectable="true"
                android:layout_marginTop="6dp" />
            <com.devworms.toukan.mangofrida.componentes.TextoNegrita
                android:text="PORCIONES"
                android:id="@+id/textView2"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:layout_gravity="fill_horizontal"
                android:textSize="10sp"
                android:paddingEnd="1dp" />

            <com.devworms.toukan.mangofrida.componentes.TextoNegrita
                android:id="@+id/textViewPorciones"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:layout_gravity="fill_horizontal"
                android:textSize="10sp" />

            <com.devworms.toukan.mangofrida.componentes.TextoNegrita
                android:text="DIFICULTAD"
                android:id="@+id/textView8"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:layout_gravity="fill_horizontal"
                android:textSize="10sp"
                android:paddingEnd="5dp" />


            <ImageView
                android:id="@+id/imageView12"

                android:src="@drawable/flor1"
                android:scaleType="fitCenter"
                android:layout_gravity="left"
                android:layout_marginTop="-2dp"
                android:layout_width="80dp"
                android:layout_marginLeft="-15dp"
                android:layout_height="20dp" />
                android:layout_height="20dp" />
        </GridLayout>
    </LinearLayout>





</RelativeLayout>