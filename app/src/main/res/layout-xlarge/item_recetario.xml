<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.theartofdev.fastimageloader.target.TargetImageView
        android:id="@+id/image_view"
        android:layout_width="718dp"
        android:layout_height="480dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="718dp"
        android:layout_height="105dp"
        android:id="@+id/imageView15"
        android:layout_alignBottom="@+id/image_view"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bandatituloreceta"
        android:scaleType="centerCrop"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/image_view"
        android:layout_alignLeft="@+id/image_view"
        android:layout_alignStart="@+id/image_view"
        android:layout_alignRight="@+id/image_view"
        android:layout_alignEnd="@+id/image_view"
        android:layout_alignTop="@+id/imageView15">
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="match_parent">
            <com.devworms.toukan.mango.componentes.TextoNegrita
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:text="Pastel azteca"
                android:id="@+id/textViewNombrereceta"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:lines="3"
                android:maxLines="3"
                android:paddingEnd="15dp"
                android:paddingStart="8dp"
                android:textIsSelectable="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="58dp"
                android:gravity="center_vertical|center_horizontal|left"
                android:layout_marginLeft="17dp" />
        </LinearLayout>

        <GridLayout
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_gravity="center_vertical"
            android:layout_columnSpan = "2">
            <com.devworms.toukan.mango.componentes.TextoNegrita
                android:text="TIEMPO"
                android:id="@+id/textView"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"

                android:textSize="25dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="6dp" />
            <com.devworms.toukan.mango.componentes.TextoNegrita
                android:shadowColor="#000000"
                android:textColor="#ffffff"
                android:id="@+id/textViewTiempo"
                android:layout_gravity="fill_horizontal"
                android:textSize="25dp"
                android:textIsSelectable="true"
                android:layout_marginTop="6dp" />
            <com.devworms.toukan.mango.componentes.TextoNegrita
                android:text="PORCIONES"
                android:id="@+id/textView2"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:layout_gravity="fill_horizontal"
                android:textSize="25dp"
                android:paddingEnd="10dp" />

            <com.devworms.toukan.mango.componentes.TextoNegrita
                android:id="@+id/textViewPorciones"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:layout_gravity="fill_horizontal"
                android:textSize="25dp" />

            <com.devworms.toukan.mango.componentes.TextoNegrita
                android:text="DIFICULTAD"
                android:id="@+id/textView8"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:layout_gravity="fill_horizontal"
                android:textSize="25dp"
                android:paddingEnd="10dp" />

            <ImageView
                android:id="@+id/imageView12"

                android:src="@drawable/floresdificultadmedia"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_gravity="left"
                android:layout_marginTop="-12dp" />
        </GridLayout>
    </LinearLayout>





</RelativeLayout>