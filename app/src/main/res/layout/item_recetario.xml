<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <com.theartofdev.fastimageloader.target.TargetImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:id="@+id/imageView15"
        android:layout_alignBottom="@+id/image_view"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bandatituloreceta"
        android:scaleType="centerCrop"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pozole Rojo"
        android:id="@+id/textViewNombrereceta"
        android:layout_alignBottom="@+id/image_view"
        android:layout_alignLeft="@+id/image_view"
        android:layout_alignStart="@+id/image_view"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="19dp"
        android:textColor="#ffffff"
        android:shadowColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tiempo"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:shadowColor="#000000"
        android:textSize="12dp"
        android:textIsSelectable="true"
        android:layout_alignTop="@+id/imageView15"
        android:layout_toRightOf="@+id/textViewNombrereceta"
        android:layout_toEndOf="@+id/textViewNombrereceta"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Porciones"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:shadowColor="#000000"
        android:textIsSelectable="true"
        android:textSize="12dp"
        android:layout_alignBottom="@+id/textViewNombrereceta"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dificultad"
        android:id="@+id/textView8"
        android:textColor="#ffffff"
        android:shadowColor="#000000"
        android:layout_alignBottom="@+id/image_view"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:textIsSelectable="true"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1 hora 30 minutos"
        android:id="@+id/textView9"
        android:textColor="#ffffff"
        android:shadowColor="#000000"
        android:textSize="12dp"
        android:textIsSelectable="true"
        android:layout_alignTop="@+id/imageView15"
        android:layout_alignRight="@+id/image_view"
        android:layout_alignEnd="@+id/image_view"
        android:singleLine="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_above="@+id/textView2"
        android:inputType="textMultiLine" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="   6"
        android:id="@+id/textView10"
        android:textColor="#ffffff"
        android:shadowColor="#000000"
        android:textSize="12dp"
        android:textIsSelectable="true"
        android:singleLine="true"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />



</RelativeLayout>