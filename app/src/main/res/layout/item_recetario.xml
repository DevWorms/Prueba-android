<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <com.theartofdev.fastimageloader.target.TargetImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:id="@+id/imageView15"
        android:layout_alignBottom="@+id/image_view"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bandatituloreceta"
        android:scaleType="centerCrop"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/image_view"
        android:layout_alignLeft="@+id/image_view"
        android:layout_alignStart="@+id/image_view"
        android:layout_alignRight="@+id/image_view"
        android:layout_alignEnd="@+id/image_view"
        android:layout_alignTop="@+id/imageView15">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pastel azteca"
            android:id="@+id/textViewNombrereceta"
            android:textColor="#ffffff"
            android:shadowColor="#000000"
            android:gravity="center"
            android:lines="3"
            android:maxLines="3"
            android:paddingEnd="5dp" />
        <GridLayout
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_gravity="center_vertical"
            android:layout_columnSpan = "2">
            <TextView
                android:text="Tiempo"
                android:id="@+id/textView"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"

                android:textSize="12dp"
                android:paddingEnd="10dp" />
            <TextView
                android:shadowColor="#000000"
                android:textColor="#ffffff"
                android:id="@+id/textViewTiempo"
                android:layout_gravity="fill_horizontal"
                android:autoText="false"
                android:textSize="12dp"
                android:textIsSelectable="true" />
            <TextView
                android:text="Porciones"
                android:id="@+id/textView2"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:layout_gravity="fill_horizontal"
                android:textSize="12dp"
                android:paddingEnd="10dp" />

            <TextView
                android:id="@+id/textViewPorciones"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:layout_gravity="fill_horizontal"
                android:textSize="12dp" />

            <TextView
                android:text="Dificultad"
                android:id="@+id/textView8"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:layout_gravity="fill_horizontal"
                android:textSize="12dp"
                android:paddingEnd="10dp" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_gravity="fill"

             />
        </GridLayout>
    </LinearLayout>





</RelativeLayout>